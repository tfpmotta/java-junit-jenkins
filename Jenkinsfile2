pipeline {
  agent {
    label 'ecs'
  }
  tools {
    maven "mvn"
  }
  stages {
        stage('Clonar') {
            steps {
                git 'https://github.com/tfpmotta/java-junit-jenkins.git'
            }
        }

        stage('Compilar') {
            steps {
                // O Maven agora está instalado e disponível para uso neste estágio
                sh 'mvn compile'
            }
        }

        stage('Testar') {
            steps {
                // O Maven também está disponível neste estágio
                sh 'mvn test'
            }
        }
    }
}
